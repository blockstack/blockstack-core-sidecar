{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "generate:schemas",
      "type": "npm",
      "script": "generate:schemas",
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "stacks-node:deploy-dev",
      "type": "shell",
      "command": "docker-compose -f docker-compose.dev.sidecar.yml up --build",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [{ "regexp": ".", "file": 1, "location": 2, "message": 3, }],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": ".",
          }
        },
      ]
    },
    {
      "label": "stacks-node:stop-dev",
      "type": "shell",
      "command": "docker-compose -f docker-compose.dev.sidecar.yml down",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [{ "regexp": ".", "file": 1, "location": 2, "message": 3, }],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": ".",
          }
        },
      ]
    },
  ]
}
