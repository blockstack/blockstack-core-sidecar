{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PostConditionFungible",
  "type": "object",
  "allOf": [
    {
      "$ref": "./abstract-post-condition.schema.json"
    },
    {
      "type": "object",
      "required": ["conditionCode", "amount", "assetInfoId"],
      "properties": {
        "conditionCode": {
          "enum": [1, 2, 3, 4, 5],
          "type": "integer"
        },
        "amount": {
          "type": "string"
        },
        "assetInfoId": {
          "enum": [1],
          "type": "integer"
        }
      }
    }
  ]
}
