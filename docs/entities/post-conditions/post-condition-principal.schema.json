{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PostConditionPrincipal",
  "type": "object",
  "anyOf": [
    {
      "type": "object",
      "additionalProperties": false,
      "description": "Principal Origin",
      "required": ["typeId"],
      "properties": {
        "typeId": {
          "enum": [1],
          "type": "integer"
        }
      }
    },
    {
      "type": "object",
      "description": "Principal Standard",
      "required": ["typeId", "address"],
      "additionalProperties": false,
      "properties": {
        "typeId": {
          "enum": [2],
          "type": "integer"
        },
        "address": { "type": "string" }
      }
    },
    {
      "type": "object",
      "description": "Principal Contract",
      "required": ["typeId", "address", "contractName"],
      "additionalProperties": false,
      "properties": {
        "typeId": {
          "enum": [3],
          "type": "integer"
        },
        "address": { "type": "string" },
        "contractName": { "type": "string" }
      }
    }
  ]
}
