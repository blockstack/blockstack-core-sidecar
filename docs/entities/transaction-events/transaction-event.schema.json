{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "TransactionEvent",
  "description": "Abstract transaction event. Only present in `smart_contract` and `contract_call` tx types.",
  "additionalProperties": false,
  "required": ["event_index", "event_type"],
  "properties": {
    "event_index": {
      "type": "integer"
    },
    "event_type": {
      "$ref": "./transaction-event-type.schema.json"
    },
    "asset": {
      "$ref": "./transaction-event-asset.schema.json"
    },
    "contract_log": {
      "type": "object",
      "additionalProperties": false,
      "required": ["contract_id", "topic", "value"],
      "properties": {
        "contract_id": {
          "type": "string"
        },
        "topic": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      }
    }
  }
}
