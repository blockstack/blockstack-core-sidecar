{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "outDir": "lib",
    "sourceMap": true,
    "sourceRoot": ".",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@entities": [".tmp/index.ts"],
      "@schemas/*": [".tmp/*"]
    }
  },
  "include": ["src/**/*", "migrations/**/*", "tests/**/*", ".tmp/**/*.schema.json"],
  "exclude": ["lib", ".tmp"]
}
