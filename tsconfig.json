{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "strict": true,
    "outDir": "lib",
    "sourceMap": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@entities": [".tmp/index.d.ts"],
      "@schemas/*": [".tmp/*"],
      "coinselect": ["src/@types/coinselect"]
    }
  },
  "include": ["src/**/*", ".tmp/**/*"],
  "exclude": ["lib"]
}
